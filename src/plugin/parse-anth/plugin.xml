<plugin
   id="parse-anth"
   name="Anthelion focused craweler plugin"
   version="1.0.0"
   provider-name="yahoo">

   <runtime>
      <library name="parse-anth.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="nutch-extensionpoints"/>
      <import plugin="anthelion"/>
   </requires>

   <extension id="org.apache.nutch.anthelion.parsing.WdcParser"
              name="Anth Parser"
              point="org.apache.nutch.parse.Parser">

      <implementation id="org.apache.nutch.anthelion.parsing.WdcParser"
                      class="org.apache.nutch.anthelion.parsing.WdcParser">
        <parameter name="contentType" value="text/html|application/xhtml+xml"/>
        <parameter name="pathSuffix" value=""/>
      </implementation>

   </extension>
   
     <extension id="org.apache.nutch.anthelion.indexing.TripleExt"
       name="Triples Extractor anthelion"
       point="org.apache.nutch.indexer.IndexingFilter">
     <implementation id="indexing-anthelion"
         class="org.apache.nutch.anthelion.indexing.TripleExtractor"/>
   </extension>
   
  <extension id="org.apache.nutch.anthelion.scoring.Anthelion"
       name="Triples Extractor anthelion"
       point="org.apache.nutch.scoring.ScoringFilter">
     <implementation id="scoring-anthelion"
         class="org.apache.nutch.anthelion.scoring.AnthelionScoringFilter"/>
   </extension>

</plugin>
